<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="main w-full min-h-screen bg-zinc-900">
          <div class="form p-10 text-white">
            <form action="/create" method="post">
                <input class="block px-5 w-full rounded-lg py-2 bg-zinc-800" name="title" type="text" placeholder="Title">
                 <textarea class="block w-full rounded-lg mt-2 px-5 py-2 bg-zinc-800 resize-none" name="details" placeholder="task details"></textarea>
                 <input class="mt-2 bg-blue-600 px-5 py-2 rounded-md" type="submit" value="create task">
            </form>
          </div>
          <div class="tasks p-10 flex gap-3 flex-wrap">
            <% if (files.length>0) { %>
                <% files.forEach(element => { %>
                    <div class="task   px-3 py-4 bg-zinc-800 rounded-md">
                        <h1 class="text-white text-3xl tracking-tighter"><%= element %></h1>
                        <a class="text-blue-500 inline-block mt-3" href="/file/<%= element %>">Read more</a>
                        <form action="/delete/<%= element %>" method="post" class="mt-3">
                            <!-- <input type="hidden" name="<%= element %>" value="<%= element %>"> -->
                            <button type="submit" name="<%= element %>" class="text-red-500">Delete</button>
                          </form>
                          <a href="/edit/<%= element %>" class="text-green-500" >Edit Filename</a>
                     </div>
                <% }) %>
            <% } else{ %> 
                <h3>no tasks yet</h3>
                <% } %>
            
             
            
            
          </div>
    </div>


 

    <script src="/javascripts/script.js"></script>
</body>
</html>